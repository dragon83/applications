%h2 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, :required => true, :autofocus => true
    = f.collection_radio_buttons :gender, [[true, 'Male'] ,[false, 'Female']], :first, :last , :item_wrapper_class => 'inline',:required => true
    = f.input :password, :required => true
    = f.input :password_confirmation, :required => true
    = f.input :dob, as: :date, start_year: Date.today.year - 50,end_year: Date.today.year - 12, discard_day: false,order: [:day,:month, :year], :required => true
    = f.input :height,:collection => HEIGHT,:label => "Height" ,:include_blank => false, :required => true
    = f.input :religion_id,:collection => Religion.all,:label_method => :name,:value_method => :id,:label => "Religion" ,:include_blank => false, :required => true
    = f.input :caste_id,:collection => EMPTY_SELECT,:label_method => :name,:value_method => :id,:label => "Caste" ,:include_blank => false, :required => true
    = f.input :sub_caste_id,:collection => EMPTY_SELECT,:label => "Sub Caste" ,:include_blank => false, :required => true

  .form-actions
    = f.button :submit, "Sign up"
= render "devise/shared/links"

