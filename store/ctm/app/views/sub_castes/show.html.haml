- model_class = SubCaste
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:caste_id) + ':'
  %br
  = @sub_caste.caste_id
%p
  %strong= model_class.human_attribute_name(:caste_name) + ':'
  %br
  = @sub_caste.caste_name
%p
  %strong= model_class.human_attribute_name(:religion_id) + ':'
  %br
  = @sub_caste.religion_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), sub_castes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_sub_caste_path(@sub_caste), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), sub_caste_path(@sub_caste), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
