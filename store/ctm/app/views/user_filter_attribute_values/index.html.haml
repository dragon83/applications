- model_class = UserFilterAttributeValue
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_filter_attribute_id)
      %th= model_class.human_attribute_name(:max)
      %th= model_class.human_attribute_name(:min)
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @user_filter_attribute_values.each do |user_filter_attribute_value|
      %tr
        %td= link_to user_filter_attribute_value.id, user_filter_attribute_value_path(user_filter_attribute_value)
        %td= user_filter_attribute_value.user_filter_attribute_id
        %td= user_filter_attribute_value.max
        %td= user_filter_attribute_value.min
        %td= user_filter_attribute_value.value
        %td=l user_filter_attribute_value.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_filter_attribute_value_path(user_filter_attribute_value), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), user_filter_attribute_value_path(user_filter_attribute_value), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_user_filter_attribute_value_path, :class => 'btn btn-primary'
