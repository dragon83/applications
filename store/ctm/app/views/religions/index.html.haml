- model_class = Religion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @religions.each do |religion|
      %tr
        %td= link_to religion.name, religion_path(religion)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_religion_path(religion), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), religion_path(religion), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_religion_path, :class => 'btn btn-primary'
