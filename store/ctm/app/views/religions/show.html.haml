- model_class = Religion
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong Name:
  %br
  = @religion.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), religions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_religion_path(@religion), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), religion_path(@religion), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
