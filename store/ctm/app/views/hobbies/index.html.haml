- model_class = Hobby
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @hobbies.each do |hobby|
      %tr
        %td= link_to hobby.id, hobby_path(hobby)
        %td= hobby.name
        %td=l hobby.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_hobby_path(hobby), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), hobby_path(hobby), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_hobby_path, :class => 'btn btn-primary'
