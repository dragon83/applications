- model_class = Caste
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong Name:
  %br
  = @caste.name
%p
  %strong Religion:
  %br
  = @caste.religion.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), castes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_caste_path(@caste), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), caste_path(@caste), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
