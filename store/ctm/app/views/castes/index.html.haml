- model_class = Caste
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Religion
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @castes.each do |caste|
      %tr
        %td= link_to caste.name, caste_path(caste)
        %td= caste.religion.name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_caste_path(caste), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), caste_path(caste), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_caste_path, :class => 'btn btn-primary'
