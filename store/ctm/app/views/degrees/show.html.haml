- model_class = Degree
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @degree.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), degrees_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_degree_path(@degree), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), degree_path(@degree), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
